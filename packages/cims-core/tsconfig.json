    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "skipLibCheck": true,

    // ðŸ‘‡ override root settings that break dts build
    "incremental": false,
