{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "incremental": true,
    "isolatedModules": true,

    "baseUrl": ".",
    "types": ["node", "next"],
    "plugins": [{ "name": "next" }],

    "paths": {
      "@/*": ["src/*"],

      "@/app/*": ["app/*"],
      "@/components/*": ["src/components/*", "components/*"],
      "@/ui/*": ["src/components/ui/*"],
      "@/lib/*": ["src/lib/*", "lib/*"],
      "@/services/*": ["src/services/*"],
      "@/workflows/*": ["apps/studio/workflows/*", "src/workflows/*"],
      "@/cims/*": ["src/cims/*"],
      "@/caia/*": ["src/caia/*"],
      "@/obari/*": ["src/obari/*"],

      "@biz-db": ["generated/biz"],
      "@corae/bdo-core": ["../../packages/bdo-core/src"],
      "@corae/cims-core": ["../../packages/cims-core/src"],
      "@corae/workfocus-core": ["../../packages/workfocus-core/src"],

      "@corae/*": ["../../packages/*"],
      "@corae/home": ["../../packages/corae-home/src"],
      "@corae/ascend-core/*": ["../../packages/ascend-core/src/*"],
      "@corae/workflows-core/*": ["../../packages/workflows-core/src/*"],
      "@corae/have-you-core/*": ["../../packages/have-you-core/src/*"],
      "@corae/memory-core/*": ["../../packages/memory-core/src/*"]
      ,
      "@shared/wizard": ["app/ship/_shared/wizard/WizardShell.tsx"]
    }
  },

  "include": [
    "app/**/*",
    "src/**/*",
    "components/**/*",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "lib/have-you/id.ts"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "app/**/tests/**",
    "tests/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "apps/**/.ship/**",
    "apps/shipyard/.ship/**"
  ]
}
