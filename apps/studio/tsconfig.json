{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@corae/want-engine": ["../../packages/want-engine/src"],
      "@corae/want-engine/*": ["../../packages/want-engine/src/*"],
  "@/*": ["app/*", "lib/*", "src/*"],
  "@/components/*": ["components/*", "src/components/*", "app/components/*"],
      "@/src/*": ["src/*"],
      // Backwards-compatible mappings for files that import using `@/app/lib/...`
  "@/app/*": ["app/*"],
  "@/app/lib/*": ["app/lib/*"],
  "@/lib/*": ["lib/*", "src/lib/*", "app/lib/*"],
  "@/lib": ["lib", "src/lib", "app/lib"]
  ,"@/build/*": ["../../build/*"],
  "@/build": ["../../build"]
    }
  },
  "include": ["app/**/*", "src/**/*", "components/**/*", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    ".next",
    // Exclude the old-cased devAgent file to avoid casing conflicts during build
    "src/agent/devAgent.ts"
  ]
}
