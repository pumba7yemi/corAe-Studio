      "requiresHumanApproval": false,
      "tags": ["alert","system"]
    },
    {
      "module": "core",
      "stage": "update_release",
      "audience": "staff",
      "channel": "cims",
      "tone": "friendly",
      "subject": "corAe Update Release v[notes]",
      "body": "New functions deployed: [notes]. Refresh your session to activate. Reply ACK ✅ when tested.",
      "requiresHumanApproval": false,
      "tags": ["system","release"]
