      "stage": "expiry_check",
      "audience": "staff",
      "channel": "cims",
      "tone": "urgent",
      "subject": "Expiry Alert – [site.name] Items Due",
      "body": "Immediate expiry review required for [site.name]. Check listed items and record findings in Expiry Log. Reply DONE ✅ or ISSUE ⚠️.",
      "requiresHumanApproval": false,
      "tags": ["expiry","hygiene"]
    },
    {
      "module": "compliance",
      "stage": "audit_notice",
      "audience": "staff",
      "channel": "email",
      "tone": "professional",
      "subject": "Upcoming Compliance Audit — [action required]",
      "body": "Dear Team,\n\nA routine audit is scheduled for [site.name] on [deliveryDate]. Ensure all records, certificates and GHP SOPs are accessible. CAIA will perform a digital pre-check 24 hours prior.\n\n[brand.signature]",
      "requiresHumanApproval": false,
      "tags": ["audit","compliance"]
    },
    {
      "module": "customer",
      "stage": "service_update",
      "audience": "client",
      "channel": "email",
      "tone": "friendly",
      "subject": "Your Service Update – [weekLabel]",
      "body": "Hello [client.name],\n\nA brief update on your current service cycle for [weekLabel]:\n- [notes]\n\nThank you for partnering with [businessName].\n\n[brand.signature]",
      "requiresHumanApproval": false,
      "tags": ["update","customer"]
    },
    {
      "module": "customer",
      "stage": "feedback_request",
      "audience": "client",
      "channel": "email",
      "tone": "friendly",
      "subject": "We value your feedback — [businessName]",
      "body": "Dear [client.name],\n\nYour feedback helps us improve. Please share your experience via the quick link below.\n\nThank you for helping shape a better workflow community.\n\n[brand.signature]",
      "requiresHumanApproval": false,
      "tags": ["feedback","customer"]
    },
    {
      "module": "customer",
      "stage": "issue_resolution",
      "audience": "client",
      "channel": "cims",
      "tone": "professional",
      "subject": null,
